<html>
    <head>
        <title>Account details</title>
        <meta charset="utf-8">
        <meta  name="viewport" content="width=device-width,initial-scale=1.0">
        <link rel="manifest" href="http://localhost:5000/manifest.json" />
        <!-- <link rel="manifest" href="https://htobacco.herokuapp.com/manifest.json" /> -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>


        </head>
    <body>

        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div style="display: flex;">
              <div  class="navbar-header">
                <a style="color:white;" class="navbar-brand" href="/">A.Hannan</a>
              </div>
              <div>
                <!-- <button onClick="handleEvent()" style="margin-left:60px;" class="btn btn-success navbar-btn"><a href="/addDealer" style="color:white;"><span class="glyphicon glyphicon-plus"></span> Add dealer</a></button> -->
                <button style="margin-left:60px;" class="btn btn-success navbar-btn"><span class="glyphicon glyphicon-plus"></span> 
                  <a href="/addDealer"  style="color:white;"> Add dealer </a></button>
              </div>
            </div>
            </div>
          </nav>
          <nav class="navbar navbar">
            <div class="container-fluid">
                <div style="display: flex;">
              <div  class="navbar-header">
                <div style="margin-left:10px;">
                  <button class="btn btn-success btn-xs navbar-btn"><a href="/allTransactions"  style="color:white;"> All transactions</a></button>
                </div>
                
              </div>
              <div style="margin-left: 160px;">
                <button class="btn btn-primary btn-xs navbar-btn"><a href="/showLimit" style="color:white;">Show limit</a></button>
              </div>
            </div>
            </div>
          </nav>
          <div class="container">
            <% if(error && error.length>0){ %>
            <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
            <% } %>
            <% if(success && success.length>0){ %>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
            <% } %>
        </div>
          <div class="container">
            <form autocomplete="off" action="/search" method="GET" class="form-inline">
              <div class="form-group">
                <input class="form-control" type="text" name="search" placeholder="Search dealer">
                <input style="margin-top:20px;margin-left:40%;" type="submit" value="Search" class="btn btn-primary btn-sm">
              </div>
          </form>
          </div>
          <div class="row text-center">
            <% if(t.length>0 ){%>
              <h4>Pending transactions</h4>
            <%}%>
           
            <% t.forEach((d) => { %>
              <div class="card" style="width:30rem;margin-left:50px;box-shadow: 5px 10px 18px #888;padding:10px;background-color:black ;">
                  <div class="card-body">
                   
                    <h4 class="card-title" style="color:white"><span class="glyphicon glyphicon-user">  </span>  <%= d.dealer.name %></h4>
                    <h4 class="card-subtitle mb-2 text-muted" style="color:white"><%= d.dealer.accountNumber %></h4>
                    <h4  class="card-text" style="color:white"><%= d.dealer.IFSC %></h4>
                    <h4  class="card-text" style="color:white">Rs. <%= d.totalamount %></h4>
                    <h6 class="card-text" style="color:white"><span class="glyphicon glyphicon-home" style="color:white"></span> <%= d.dealer.bankName %></p>
                    <button class="btn btn-success btn-sm"><a style="color:white;" href="/updateStatus/<%= d._id %>">Done</a></button>
                    <button class="btn btn-primary btn-sm"><a href="/viewDetail/<%= d._id %>" data-value="<%= d.dealer._id %>"  style="color:white;">View transactions</a></button>
                  </div>
                </div>
          <% }) %>

        <% dealers.forEach((dealer) => { %>
            <div class="card" style="width:30rem;margin-left:50px;box-shadow: 5px 10px 18px #888888;padding:10px;">
                <div class="card-body">
                  <a href="/edit/<%= dealer._id %>"><span style="margin-left:70%;" class="glyphicon glyphicon-pencil">  </span></a>
                  <h4 class="card-title"><span class="glyphicon glyphicon-user">  </span>  <%= dealer.name %></h4>
                  <h4 class="card-subtitle mb-2 text-muted"><%= dealer.accountNumber %></h4>
                  <h6 class="card-text"><%= dealer.IFSC %></p>
                <h6 class="card-text"><span class="glyphicon glyphicon-home"></span> <%= dealer.bankName %></p>
                  <button class="btn btn-success btn-sm"><a style="color:white;" href="/addTransaction/<%= dealer._id %>">Add transaction</a></button>
                  <button class="btn btn-primary btn-sm"><a href="/viewTransactions/<%= dealer._id %>" data-value="<%= dealer._id %>"  style="color:white;">View transactions</a></button>
                </div>
              </div>
        <% }) %>
          </div>
        <script defer src="https://hannantobacco.onrender.com/rsw.js" ></script>

    </body>
</html>